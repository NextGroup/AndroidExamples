<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto" >

	<!-- showAsAction이 있으면 액션 바로 아니면 기존처럼 메뉴버튼을 누르는 경우 나오는 메뉴가 된다. -->
    <!-- showAsAction의 ifRoom은 기기상에 표시할 공간이 있으면 표시되고 always는 항상 출력하도록 하게 된다. -->
    <item
        android:id="@+id/action_item_add"
        android:icon="@android:drawable/ic_menu_add"
        myapp:showAsAction="ifRoom|withText"
        android:title="Add"/>
    <item
        android:id="@+id/action_item_search"
        android:icon="@android:drawable/ic_menu_search"
        myapp:showAsAction="always"
        android:title="Action item with icon"/>
    <item
        android:id="@+id/action_item_normal"
        android:title="Normal item"/>

</menu>
